<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <input type="text" name="x" id="x">
    <div id="result"></div>
    <button type="button" id="btnCall" onclick="ajaxCall()">Ajax호출하기</button>
</body>
</html>
<script>
function ajaxCall(){
//서버와 백그라운드에서 통신을 하려고 한다
var xhttp = new XMLHttpRequest(); // 통신담당 객체를 만든다
//서버에서 응답이 있을 경우 호출될 함수를 작성해서 전달한다
    xhttp.onload= function(){
    //xhttp객체에 responseText 라는 속성이 있고, 이 속성에 서버에서 전달된 값이 저장되어 있다.
    //ajaxtest 라우터 안에 저장되어있는 text인 "data만 보낸다"를 받는거고,, 보통은 여기에 DB나 JSON 객체를 담아서 가져올듯 함.
        console.log(this.responseText); //콘솔창에 출력
        document.getElementById("result").innerHTML = this.responseText; //화면에 출력
    }

//서버로 원하는 정보를 요청한다
xhttp.open("GET", "/ajax/result1"); //서버로 요청할 http메서드와 URL 지정
xhttp.send(); // 서버로 요청을 비동기로 보냄
}

</script>