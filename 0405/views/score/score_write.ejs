    <div class="container" style="margin-top:20px;">
        <h3 style="text-align: center;">게시판</h3>
        <form name="myform" id="myform">
            <table class="table">
                <colgroup>
                    <col style = "width:30%">
                    <col style = "width:70%">
                </colgroup>
              <thead>
                <tr>
                  <th>항목</th>
                  <th>내용</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>이름</td>
                  <td><input type="text" name="name"></td>
                </tr>
                <tr>
                  <td>국어</td>
                  <td><input type="text" name="kor"></td>
                </tr>
                <tr>
                  <td>영어</td>
                  <td><input type="text" name="eng"></td>
                </tr>
                <tr>
                  <td>수학</td>
                  <td><input type="text" name="mat"></td>
                </tr>
                <tr>
                  <td colspan="2">
                     <button type="button" class="btn btn-danger" id="btnSave">등록</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </form>
    </div>
</body>
</html>

